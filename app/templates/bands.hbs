<div class="col-md-4">
  <div class="list-group">
    <div class="list-group-item">
      {{input type="text" class="new-band" placeholder="New band" action="createBand" value=name}}
      <button class="new-band-button btn btn-sm btn-primary" {{action "createBand"}}>Add</button>
    </div>

    {{#each band in model}}
      {{#link-to "band.songs" band class="list-group-item band-link"}}
        {{band.name}}
        <span class="pointer glyphicon glyphicon-chevron-right"></span>
      {{/link-to}}
    {{/each}}
  </div>
</div>

<div class="col-md-8">
  <div class="list-group">
    {{outlet}}
  </div>
</div>
