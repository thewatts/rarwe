<div class="row">
  {{#if canCreateSong}}
    <div class="list-group-item">
      {{input type="text" class="new-song" placeholder="New Song" action="createSong" value=title}}
      <button class="new-song-button btn btn-sm btn-primary"
        {{ action "createSong" }}
        {{ bind-attr disabled=isDisabled}}>
        Add
      </button>
    </div>
  {{else}}
    <div class="list-group-item empty-list">
      <div class="empty-message">
        There are no songs yet. Why don't you <a href="#" {{action "enableSongCreation"}}>create one?</a>
      </div>
    </div>
  {{/if}}

  <ul class="list-group songs">
    {{#each song in model}}
      <li class="list-group-item">
        {{song.title}}
        {{star-rating item=song rating=song.rating setAction="updateRating"}}
      </li>
    {{/each}}
  </ul>
</div>
